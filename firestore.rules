rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    match /{document=**} {
      allow read, write: if false;
    }

    match /users/{userId} {
        allow read, write: if isOwner(userId);
    }

    match /quotes/{quoteId} {
        allow read: if existingData().uid == incomingAuth().uid;
        allow create: if incomingAuth().uid == incomingData().uid;
        allow update: if incomingAuth().uid == incomingData().uid && existingData().uid == incomingAuth().uid;
        allow delete: if existingData().uid == incomingAuth().uid;
    }

    function isOwner(userId) {
        return incomingAuth().uid == userId
    }

    function existingData() {
      return resource.data;
    }

    function incomingData() {
      return request.resource.data;
    }

    function incomingAuth() {
      return request.auth;
    }
  }
}
